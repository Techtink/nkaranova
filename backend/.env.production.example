# Production Environment Variables
# Copy this file to .env.production and fill in the values

# Server
PORT=5000
NODE_ENV=production

# MongoDB (use MongoDB Atlas for production or your own MongoDB instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nkaranova?retryWrites=true&w=majority

# JWT (generate a strong secret: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-generate-a-strong-one
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Frontend URL (for CORS)
FRONTEND_URL=https://yourdomain.com

# Stripe (use live keys for production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (use a real email service like SendGrid, Mailgun, or AWS SES)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key
EMAIL_FROM="Nkaranova <noreply@yourdomain.com>"

# OpenAI (for AI Tailor Finder)
OPENAI_API_KEY=sk-your-openai-api-key
